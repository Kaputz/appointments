{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="modal-dialog"> 
    
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">
                    Importar utilizador
                </h4>
            </div>
            <div class="modal-body">           
                {{ form_start(form) }}
                    {{ form_errors(form) }}
                
                    {{ form_row(form.username, {'label':false}) }}
                    <input type="submit" id="submit-form" style="display:none;" />

                    {{form_rest(form)}}
                {{ form_end(form) }}  
            </div>
            <div class="modal-footer">
                <div class="form-group" style="display: inline-block">
                        <a href={{ path('homepage') }}>
                            <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'action.close'|trans }}</button>
                        </a> 
                        &nbsp;
                        {# <button type="submit" id="user_save" name="user[save]" class="btn btn-primary">{{ 'action.save'|trans }}</button> #}

                        {# truque da label para submeter o form #}
                        <label for="submit-form" tabindex="0" class="btn btn-primary">{{ 'action.save'|trans }}</label>
                        
                </div>
            </div>
        </div>
    
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        a:hover {
            text-decoration: none;
        }
    </style>
{% endblock %}